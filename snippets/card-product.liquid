<div class="product-card">
  <img src="{{ card_product.featured_media | image_url: width: 533 }}" alt="">
  <h2 class="product-title">
    <a href="{{ card_product.url }}">{{ card_product.title }}</a>
  </h2>
  <div class="product-info">
    {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}
    {% if settings.wishlist_enabled %}
      {%- render 'button-wishlist', product: card_product -%}
    {% endif %}
  </div>
  {%- if card_product.variants.size > 1 -%}
    <a href="{{ card_product.url }}" class="select-variant-btn"><button class="button">Select Option</button></a>
  {%- else -%}
    {%- render 'buy-button', product: card_product, product_card: true -%}
  {%- endif %}
</div>
